<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        tools:context="com.example.hackintosh.forcethemdoit.AddSchedule">

        <EditText
            android:layout_width="match_parent"
            android:hint="Schedule Name"
            android:id="@+id/scheduleName"
            android:textColorHint="@color/bgTextEdit"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/bgTextEdit" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/recipientsList"
            android:hint="Name Surname 067000000\nName2 Surname2 067000001"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColorHint="@color/bgTextEdit"
            android:layout_below="@+id/scheduleName"
            android:textColor="@color/bgTextEdit" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/recipientsText"
            android:hint="Text to send"
            android:inputType="textMultiLine"
            android:textColorHint="@color/bgTextEdit"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipientsList"
            android:textColor="@color/bgTextEdit"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/sendDelay"
            android:hint="Interval between messages(in sec, default 30s)"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColorHint="@color/bgTextEdit"
            android:layout_below="@+id/recipientsText"
            android:textColor="@color/bgTextEdit"
            android:inputType="number"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendDelay"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/buttonColor"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/textColor" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Sending"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/buttonColor"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/textColor"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>