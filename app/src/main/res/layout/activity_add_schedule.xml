<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hackintosh.forcethemdoit.AddSchedule">

    <EditText
        android:layout_width="match_parent"
        android:hint="Schedule Name"
        android:id="@+id/scheduleName"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/csvText"
        android:hint="CSV Text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scheduleName"/>

    <Button
        android:id="@+id/getCsvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_below="@+id/csvText"/>


</RelativeLayout>
